{
  "version": "1.0.0",
  "application": {
    "name": "LLM Code Assistant",
    "version": "1.0.0",
    "description": "AI-powered code generation and assistance tool",
    "author": "LLM Code Assistant Team",
    "debug": false,
    "log_level": "INFO",
    "auto_save": true,
    "session_timeout": 3600,
    "environment": "production"
  },
  "llm": {
    "default_provider": "local",
    "timeout": 30,
    "max_retries": 3,
    "retry_delay": 1.0,
    "providers": {
      "openai": {
        "enabled": true,
        "api_key": "${OPENAI_API_KEY}",
        "organization": "${OPENAI_ORG_ID}",
        "base_url": "https://api.openai.com/v1",
        "models": {
          "default": "gpt-4",
          "available": [
            "gpt-3.5-turbo",
            "gpt-3.5-turbo-16k",
            "gpt-4",
            "gpt-4-turbo-preview",
            "gpt-4o"
          ]
        },
        "parameters": {
          "temperature": 0.3,
          "max_tokens": 8192,
          "top_p": 0.9,
          "frequency_penalty": 0.0,
          "presence_penalty": 0.0
        },
        "timeout": 120,
        "max_retries": 3,
        "stream": false
      },
      "claude": {
        "enabled": true,
        "api_key": "${CLAUDE_API_KEY}",
        "base_url": "https://api.anthropic.com",
        "models": {
          "default": "claude-3-sonnet-20240229",
          "available": [
            "claude-3-sonnet-20240229",
            "claude-3-haiku-20240307",
            "claude-3-opus-20240229"
          ]
        },
        "parameters": {
          "temperature": 0.3,
          "max_tokens": 8192
        },
        "timeout": 120,
        "max_retries": 3,
        "stream": false
      },
      "local": {
        "enabled": true,
        "api_key": "",
        "base_url": "http://localhost:11434",
        "models": {
          "default": "wizardcoder:33b",
          "available": [
            "wizardcoder:33b",
            "starcoder:7b",
            "codellama:7b",
            "phi4:14b",
            "nomic-embed-text:latest"
          ]
        },
        "parameters": {
          "temperature": 0.2,
          "max_tokens": 8192,
          "context_length": 8192,
          "threads": 8,
          "gpu_layers": 0
        },
        "timeout": 900,
        "max_retries": 2,
        "quality_priority": true,
        "model_selection": {
          "code_generation": {
            "preferred_models": ["wizardcoder:33b", "starcoder:7b", "codellama:7b"],
            "timeout": 600,
            "priority": "quality"
          },
          "code_explanation": {
            "preferred_models": ["wizardcoder:33b", "starcoder:7b"],
            "timeout": 300,
            "priority": "quality"
          },
          "debugging": {
            "preferred_models": ["wizardcoder:33b", "starcoder:7b"],
            "timeout": 600,
            "priority": "quality"
          },
          "refactoring": {
            "preferred_models": ["wizardcoder:33b", "phi4:14b", "starcoder:7b"],
            "timeout": 600,
            "priority": "quality"
          },
          "quick_response": {
            "preferred_models": ["starcoder:7b", "codellama:7b"],
            "timeout": 300,
            "priority": "balanced"
          },
          "complex_analysis": {
            "preferred_models": ["wizardcoder:33b", "phi4:14b"],
            "timeout": 900,
            "priority": "quality",
            "allow_extended_time": true
          }
        },
        "timeout_per_model": {
          "wizardcoder:33b": 900,
          "phi4:14b": 720,
          "starcoder:7b": 600,
          "codellama:7b": 600,
          "nomic-embed-text:latest": 300
        }
      },
      "azure": {
        "enabled": false,
        "api_key": "${AZURE_OPENAI_API_KEY}",
        "base_url": "${AZURE_OPENAI_ENDPOINT}",
        "models": {
          "default": "gpt-35-turbo",
          "available": [
            "gpt-35-turbo",
            "gpt-4"
          ]
        },
        "parameters": {
          "temperature": 0.3,
          "max_tokens": 4096
        },
        "timeout": 30,
        "max_retries": 3,
        "custom_headers": {
          "api-version": "2024-02-15-preview"
        }
      }
    },
    "ui_integration": {
      "auto_insert_code": false,
      "show_model_info": true,
      "enable_context_menu": true,
      "chat_panel": {
        "auto_scroll": true,
        "show_timestamps": true,
        "max_history": 1000,
        "export_formats": ["txt", "json", "md"]
      },
      "editor_integration": {
        "highlight_generated_code": true,
        "show_generation_markers": true,
        "enable_inline_suggestions": false
      }
    },
    "embeddings": {
      "model": "sentence-transformers/all-MiniLM-L6-v2",
      "dimension": 384,
      "cache_embeddings": true
    },
    "vector_db": {
      "type": "faiss",
      "path": "data/vector_db/",
      "index_type": "IndexFlatIP",
      "similarity_threshold": 0.7
    }
  },
  "ui": {
    "default_interface": "gui",
    "theme": {
      "default": "dark",
      "available_themes": ["light", "dark", "custom"],
      "theme_path": "assets/themes/"
    },
    "fonts": {
      "editor": {
        "family": "Consolas",
        "size": 12,
        "line_height": 1.2
      },
      "ui": {
        "family": "Yu Gothic UI",
        "size": 9
      }
    },
    "window": {
      "default_width": 1200,
      "default_height": 800,
      "min_width": 800,
      "min_height": 600,
      "maximized": false,
      "remember_size": true,
      "remember_position": true
    },
    "editor": {
      "tab_width": 4,
      "use_spaces": true,
      "show_line_numbers": true,
      "show_whitespace": false,
      "word_wrap": false,
      "auto_indent": true,
      "auto_complete": true,
      "syntax_highlighting": true,
      "bracket_matching": true,
      "code_folding": true
    },
    "project_tree": {
      "show_hidden_files": false,
      "auto_expand": true,
      "sort_folders_first": true,
      "case_sensitive_sort": false
    },
    "chat_panel": {
      "auto_scroll": true,
      "show_timestamps": true,
      "max_history": 1000,
      "font_size": 10
    },
    "cli": {
      "prompt_style": "colorful",
      "show_timestamps": true,
      "auto_complete": true,
      "history_size": 1000
    },
    "gui": {
      "theme": "dark",
      "window_size": [1200, 800],
      "font_size": 12,
      "auto_scroll": true
    }
  },
  "logging": {
    "level": "INFO",
    "file_path": "logs/llm_chat.log",
    "config_file": "config/logging_config.yaml",
    "log_dir": "logs/",
    "max_file_size": "10MB",
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "date_format": "%Y-%m-%d %H:%M:%S",
    "console_output": true,
    "file_output": true
  },
  "storage": {
    "chat_history": {
      "enabled": true,
      "max_sessions": 100,
      "auto_save_interval": 300,
      "storage_path": "data/chat_history"
    },
    "config_backup": {
      "enabled": true,
      "backup_interval": 86400,
      "max_backups": 10,
      "backup_path": "config/backup"
    }
  },
  "database": {
    "url": "sqlite:///data/database/llm_assistant.db",
    "echo": false,
    "pool_size": 10,
    "max_overflow": 20,
    "pool_timeout": 30,
    "pool_recycle": 3600,
    "backup": {
      "enabled": true,
      "interval": 3600,
      "max_backups": 10,
      "path": "backups/database/"
    }
  },
  "security": {
    "api_key_validation": true,
    "encryption": {
      "algorithm": "AES-256-GCM",
      "key_derivation": "PBKDF2",
      "iterations": 100000
    },
    "session": {
      "timeout": 3600,
      "secure_cookies": true,
      "same_site": "strict"
    },
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60,
      "burst_limit": 10
    },
    "input_sanitization": true,
    "output_filtering": false
  },
  "cache": {
    "enabled": true,
    "type": "memory",
    "max_size": 1000,
    "ttl": 3600,
    "file_cache": {
      "enabled": true,
      "path": "cache/",
      "max_size": "500MB",
      "cleanup_interval": 3600
    }
  },
  "performance": {
    "monitoring": {
      "enabled": true,
      "interval": 60,
      "metrics": ["cpu", "memory", "disk", "network"]
    },
    "optimization": {
      "lazy_loading": true,
      "async_operations": true,
      "batch_processing": true,
      "compression": true
    },
    "limits": {
      "max_file_size": "100MB",
      "max_project": "100",
      "_files": 10000,
      "max_memory_usage": "2GB",
      "max_cpu_usage": 80
    }
  },
  "plugins": {
    "enabled": true,
    "auto_load": true,
    "plugin_dir": "src/plugins/",
    "enabled_plugins": [
      "git_integration",
      "code_formatter",
      "export_tools"
    ],
    "plugin_settings": {
      "git_integration": {
        "auto_commit": false,
        "commit_message_template": "Auto commit by LLM Code Assistant",
        "default_branch": "main"
      },
      "code_formatter": {
        "python": {
          "formatter": "black",
          "line_length": 88,
          "auto_format": false
        },
        "javascript": {
          "formatter": "prettier",
          "tab_width": 2,
          "auto_format": false
        }
      },
      "export_tools": {
        "default_format": "pdf",
        "output_dir": "exports/",
        "include_metadata": true
      }
    }
  },
  "file_management": {
    "auto_save": {
      "enabled": true,
      "interval": 300
    },
    "backup": {
      "enabled": true,
      "interval": 1800,
      "max_backups": 20,
      "path": "backups/files/"
    },
    "temp_files": {
      "cleanup_on_exit": true,
      "max_age": 86400,
      "path": "temp/"
    },
    "file_types": {
      "supported_extensions": [
        ".py", ".js", ".ts", ".html", ".css", ".json", ".xml", ".yaml", ".yml",
        ".md", ".txt", ".sql", ".sh", ".bat", ".ps1", ".cpp", ".c", ".h",
        ".java", ".cs", ".php", ".rb", ".go", ".rs", ".swift", ".kt"
      ],
      "syntax_highlighting": {
        "enabled": true,
        "theme": "monokai"
      }
    }
  },
  "project_management": {
    "recent_projects": {
      "max_count": 10,
      "auto_open_last": false
    },
    "templates": {
      "enabled": true,
      "path": "data/templates/",
      "auto_detect_type": true
    },
    "analysis": {
      "auto_analyze": true,
      "include_dependencies": true,
      "max_depth": 5
    }
  },
  "network": {
    "timeout": 30,
    "max_retries": 3,
    "retry_delay": 1,
    "proxy": {
      "enabled": false,
      "http": "",
      "https": "",
      "no_proxy": "localhost,127.0.0.1"
    }
  },
  "updates": {
    "auto_check": true,
    "check_interval": 86400,
    "include_beta": false,
    "update_url": "https://api.github.com/repos/llm-code-assistant/releases"
  },
  "telemetry": {
    "enabled": false,
    "anonymous": true,
    "endpoint": "",
    "include_performance": false,
    "include_errors": false
  },
  "experimental": {
    "features": {
      "ai_code_review": false,
      "smart_refactoring": false,
      "auto_documentation": false,
      "code_prediction": false
    }
  },
  "shortcuts": {
    "file": {
      "new": "Ctrl+N",
      "open": "Ctrl+O",
      "save": "Ctrl+S",
      "save_as": "Ctrl+Shift+S",
      "close": "Ctrl+W",
      "quit": "Ctrl+Q"
    },
    "edit": {
      "undo": "Ctrl+Z",
      "redo": "Ctrl+Y",
      "cut": "Ctrl+X",
      "copy": "Ctrl+C",
      "paste": "Ctrl+V",
      "select_all": "Ctrl+A",
      "find": "Ctrl+F",
      "replace": "Ctrl+H"
    },
    "view": {
      "zoom_in": "Ctrl++",
      "zoom_out": "Ctrl+-",
      "zoom_reset": "Ctrl+0",
      "toggle_fullscreen": "F11",
      "toggle_sidebar": "Ctrl+B"
    },
    "llm": {
      "generate_code": "Ctrl+G",
      "explain_code": "Ctrl+E",
      "refactor_code": "Ctrl+R",
      "chat_panel": "Ctrl+T"
    }
  },
  "development": {
    "debug_mode": false,
    "verbose_logging": false,
    "profiling": false,
    "test_mode": false,
    "mock_responses": false
  },
  "paths": {
    "config_dir": "config/",
    "data_dir": "data/",
    "logs_dir": "logs/",
    "cache_dir": "cache/",
    "temp_dir": "temp/",
    "backup_dir": "backups/",
    "plugins_dir": "src/plugins/",
    "templates_dir": "data/templates/",
    "exports_dir": "exports/",
    "user_data_dir": "user_data/"
  },
  "validation": {
    "strict_mode": false,
    "validate_inputs": true,
    "validate_outputs": false,
    "schema_validation": true
  },
  "compatibility": {
    "python_version": "3.11.9",
    "minimum_python": "3.8",
    "supported_platforms": ["windows", "linux", "macos"],
    "encoding": "utf-8"
  }
}

